{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {
        "SpokeCIDR": "[concat('10.',split(resourceGroup().name,'-')[2],'.0.0/24')]"
    },
    "resources": [
        {   "name": "[concat(resourcegroup().name,'Vnet')]",
            "comments": "Main peering point for all other vnets deployed by main.json",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[concat(resourcegroup().name,'Vnet')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('SpokeCIDR')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat(resourcegroup().name,'Subnet1')]",
                        "properties": {
                            "addressPrefix": "[variables('SpokeCIDR')]"
                        }
                    }
                    
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2019-11-01",
            "name": "[concat(resourcegroup().name,'-Hub-Peering')]",
            "comments": "Spoke to Hub peering",
            "location": "[resourceGroup().location]",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": false,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks/', 'HubVnet')]"
                }
            },
            "dependsOn": [
                        "[resourceId('Microsoft.Network/virtualNetworks/', 'HubVnet')]",
                        "[resourceId('Microsoft.Network/virtualNetworks/', concat(resourcegroup().name,'Vnet'))]"
            ]
        }
    ],
    "outputs": {}
}