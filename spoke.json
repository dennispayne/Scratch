{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {
        "SpokeCIDR": "[concat('10.',split(resourceGroup().name,'-')[1],'.0.0/24')]"
    },
    "resources": [
        {   "name": "[concat(resourcegroup().name,'Vnet')]",
            "comments": "Main peering point for all other vnets deployed by main.json",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[concat(resourcegroup().name,'Vnet')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('SpokeCIDR')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat(resourcegroup().name,'Subnet1')]",
                        "properties": {
                            "addressPrefix": "[variables('SpokeCIDR')]"
                        }
                    }
                    
                ]
            }
        }
    ],
    "outputs": {}
}