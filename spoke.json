{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {
        "ThisSpokeNumber":"[split(resourceGroup().name,'-')[2]]",
        "SpokeCIDR": "[concat('10.',variables('ThisSpokeNumber'),'.0.0/24')]"
    },
    "resources": [
        {   "name": "[concat(resourcegroup().name,'-Vnet')]",
            "comments": "Vnet used by this Spoke",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('SpokeCIDR')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat(resourcegroup().name,'-Subnet1')]",
                        "properties": {
                            "addressPrefix": "[variables('SpokeCIDR')]"
                        }
                    }
                    
                ]
            },
            "resources": [
                {
                    "apiVersion": "2020-05-01",
                    "type": "virtualNetworkPeerings",
                    "name": "[concat(resourcegroup().name,'-Vnet-to-WVD-Hub-Vnet-Peering')]",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/virtualNetworks', concat(resourcegroup().name,'-Vnet'))]"
                    ],
                    "comments": "This is the peering from Spoke to Hub",
                    "properties": {
                        "allowVirtualNetworkAccess": true,
                        "allowForwardedTraffic": false,
                        "allowGatewayTransit": false,
                        "useRemoteGateways": false,
                        "remoteVirtualNetwork": {
                            "id": "[resourceId('WVD-Hub','Microsoft.Network/virtualNetworks','WVD-Hub-Vnet')]"
                        }
                    }    
                }

            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "HubToSpokePeeringDeployment",
            "resourceGroup": "WVD-Hub",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', concat(resourcegroup().name,'-Vnet'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources":[
                        {
                            "type": "Microsoft.Network/virtualNetworks/VirtualNetworkPeerings",
                            "apiVersion": "2019-11-01",
                            "name": "[concat(resourcegroup().name,'-Vnet-to-WVD-Spoke',variables('ThisSpokeNumber'),'-Vnet-Peering')]",
                            "location": "[resourceGroup().location]",
                            "comments": "This is the peering from Hub to Spoke",
                            "properties": {
                                "allowVirtualNetworkAccess": true,
                                "allowForwardedTraffic": false,
                                "allowGatewayTransit": false,
                                "useRemoteGateways": false,
                                "remoteVirtualNetwork": {
                                    "id": "[resourceId(concat('WVD-Spoke-',variables('ThisSpokeNumber')),'Microsoft.Network/virtualNetworks',concat('WVD-Spoke-',variables('ThisSpokeNumber'),'-Vnet'))]"
                                }
                    }
                        }
                    ]
                }
            }
        }
        
    ],
    "outputs": {}
}