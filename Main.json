{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "SpokeCount":{
            "type": "int",
            "minValue": 1
        },
        "DeploymentLocation": {
            "type": "string",
            "allowedValues": [
                "eastus",
                "westus"                
            ]
        }
    },
    "functions": [],
    "variables": {

    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "name": "Hub",
            "location": "[parameters('DeploymentLocation')]"
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "name": "[concat('Spoke',copyIndex(1))]",
            "location": "[parameters('DeploymentLocation')]",
            "dependsOn":[
                "Hub"
            ],
            "copy": {
                "name":"SpokeRGLoop",
                "mode": "Parallel",
                "count": "[parameters('SpokeCount')]"
            }
         },
        {
            "name": "DeployHub",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "Hub",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/dennispayne/Scratch/master/hub.json"
                },
                "parameters": {
                }
            }
        }        
    ],
    "outputs": {}
}