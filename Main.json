{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "SpokeCount":{
            "type": "int",
            "minValue": 1
        },
        "DeploymentLocation": {
            "type": "string",
            "allowedValues": [
                "eastus",
                "westus"                
            ]
        },
        "TemplateLocation": {
            "type": "string",
            "metadata": {
                "description": "Globally available uri where templates are stored. ***MUST END IN '/'***  i.e. https://raw.githubusercontent.com/repo/branch/"
            }
        }
    },
    "functions": [],
    "variables": {

    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "name": "Hub",
            "location": "[parameters('DeploymentLocation')]",
            "comments": "Hub Resource Group that will be the centralized services (vnet, profile storage, etc) for all other services deployed by this template"
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "name": "[concat('Spoke',copyIndex(1))]",
            "location": "[parameters('DeploymentLocation')]",
            "dependsOn":[
                "Hub"
            ],
            "copy": {
                "name":"SpokeRGLoop",
                "mode": "Parallel",
                "count": "[parameters('SpokeCount')]"
            },
            "comments": "One or more Spoke Resource Groups that will contain vnets peered with the Hub, WVD session pools, etc."
         },
        {
            "name": "DeployHub",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "Hub",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat( parameters('TemplateLocation') , 'hub.json' )]"
                },
                "parameters": {
                }
            },
            "comments": "Linked deployment template containing all hub services. Executes once."
        },
        {
            "name": "DeploySpoke",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[concat('Spoke',copyIndex(1))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat( parameters('TemplateLocation') , 'spoke.json' )]"
                },
                "parameters": {
                }
            },
            "copy": {
                "name":"SpokeTemplateLoop",
                "mode": "Parallel",
                "count": "[parameters('SpokeCount')]"
            },
            "comments": "Linked deployment template containing all spoke services. Executes once per Spoke RG"
        }           
    ],
    "outputs": {}
}